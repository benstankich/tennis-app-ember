{{#each model as |player|}}
	<div class="player-card">
		{{!-- <img src="http://via.placeholder.com/200x200?text=Placeholder" alt=""><br> --}}
		<h2>{{player.first_name}} {{player.last_name}}</h2>
		<ul>
			{{!-- <li><span>ID: </span>{{player.id}}</li> --}}
			{{!-- <li><span>User type: </span>Player</li> --}}
			<li><span>Email: </span>{{player.email}}</li>
			<li><span>Phone: </span>{{player.phone}}</li>
			<li><span>Gender: </span>{{#if (eq player.gender 1)}}Male{{else}}Female{{/if}}</li>
			<li><span>Points: </span>{{player.points}}</li>
			<li><span>Age: </span>{{player.age}}</li>
			<li><span>Coach: </span>{{player.coach_id.first_name}} {{player.coach_id.last_name}}</li>
		</ul>
	</div>
	<br><br>
{{/each}}

