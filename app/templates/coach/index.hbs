<h1>Leaderboard</h1>

<div class="leaderboard">
	{{ember-chart type='bar' data=points width=1000 height=600}}
</div>

<table class="standard-wrapper">
	<tr>
		<th>Player</th>
		<th>Points</th>
	</tr>
{{#each sortedPlayers as |player|}}
	<tr>
		<td><a href="/coach/player/{{player.id}}">{{player.first_name}} {{player.last_name}}</a></td>
		<td>{{player.points}}</td>
	</tr>
{{/each}}
</table>